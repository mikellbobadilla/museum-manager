<%- include('./header.ejs') %>

  <main class="container-md mt-5">

    <form action="/articulos/create" enctype="multipart/form-data" method="post">
      
      <h1 class="mb-4">Agregar Articulo</h1>
      
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label ">Titulo</label>
        <input type="text" class="form-control bg-dark text-light" id="exampleInputPassword1" name="title">
      </div>
      
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label ">Contenido</label>
        <input type="text" class="form-control bg-dark text-light" id="exampleInputPassword1" name="content">
      </div>

      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label ">Nombre de la Carpeta</label>
        <input type="text" class="form-control bg-dark text-light" id="exampleInputPassword1" name="dir_name">
      </div>
     
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label ">
          Archivo: <span class="text-danger">(sin punto ni espacios)</span>
        </label>
        <input type="file" multiple="multiple" class="form-control bg-dark text-light" id="exampleInputPassword1"
          name="file">
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    
    </form>

  </main>

  <%- include('./footer.ejs') %>